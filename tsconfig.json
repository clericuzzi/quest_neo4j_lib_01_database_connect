{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2020"],
    "types": ["jest", "node"],
    "target": "es2019",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true
  },
  "include": ["./src/**/*.ts", "./index.ts"],
  "exclude": ["node_modules", "tmp", "**/*.spec.ts"]
}
